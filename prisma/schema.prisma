generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  agent
  va
}

enum TemplateType {
  residential
  commercial
}

enum RequestStatus {
  new
  progress
  revision
  completed
}

model User {
  id                      String    @id @default(uuid())
  name                    String
  email                   String    @unique
  passwordHash            String
  role                    Role      @default(agent)
  isActive                Boolean   @default(true)
  twoFactorEnabled        Boolean   @default(false)
  passwordResetTokenHash  String?
  passwordResetExpires    DateTime?
  lastLoginAt             DateTime?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  // Relations
  requests                Request[]

  @@map("users")
}

model Template {
  id          String        @id @default(uuid())
  title       String
  category    String
  type        TemplateType
  previewUrl  String?
  canvaUrl    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  requests    Request[]

  @@map("templates")
}

model Request {
  id            String         @id @default(uuid())
  agentId       String
  templateId    String
  projectTitle  String
  deadline      DateTime?
  platforms     String[]
  dimensions    String?
  notes         String?
  status        RequestStatus  @default(new)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  agent         User           @relation(fields: [agentId], references: [id], onDelete: Cascade)
  template      Template       @relation(fields: [templateId], references: [id], onDelete: Restrict)
  files         RequestFile[]

  @@map("requests")
}


model RequestFile {
  id          String    @id @default(uuid())
  requestId   String
  fileUrl     String
  fileType    String    @default("agent_upload") // agent_upload, va_completed
  createdAt   DateTime  @default(now())

  // Relations
  request     Request   @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@map("request_files")
  }
